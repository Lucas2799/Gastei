<?xml version="1.0" encoding="UTF-8" ?>
<Application 
    x:Class="Gastei.UI.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:Gastei.UI.Converters">

    <Application.Resources>
        <ResourceDictionary>
            <!-- Importar nossos recursos -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Conversores -->
            <converters:BooleanToStatusConverter x:Key="BooleanToStatusConverter" />
            <converters:BooleanToToggleTextConverter x:Key="BooleanToToggleTextConverter" />
        </ResourceDictionary>
    </Application.Resources>

</Application>