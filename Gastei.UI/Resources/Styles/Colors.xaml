<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- ✨ Cores principais -->
    <Color x:Key="PrimaryColor">#6A11CB</Color>
    <Color x:Key="PrimaryDarkColor">#4E0F9B</Color>

    <!-- ✨ Background -->
    <Color x:Key="PageBackgroundLight">#FFFFFF</Color>
    <Color x:Key="PageBackgroundDark">#121212</Color>

    <!-- ✨ Card Background -->
    <Color x:Key="CardBackgroundLight">#F2F2F2</Color>
    <Color x:Key="CardBackgroundDark">#1E1E1E</Color>

    <!-- ✨ Texto -->
    <Color x:Key="TextColorLight">#222222</Color>
    <Color x:Key="TextColorDark">#FFFFFF</Color>

    <Color x:Key="SubtitleColorLight">#666666</Color>
    <Color x:Key="SubtitleColorDark">#BBBBBB</Color>

    <Color x:Key="BorderLight">#DDDDDD</Color>
    <Color x:Key="BorderDark">#333333</Color>

    <!-- Cores de Input -->
    <Color x:Key="EntryBackgroundColor">White</Color>
    <Color x:Key="EntryBackgroundColorDark">#2C2C2E</Color>

    <Color x:Key="EntryTextColor">Black</Color>
    <Color x:Key="EntryTextColorDark">White</Color>

    <Color x:Key="EntryPlaceholderColor">#999999</Color>
    <Color x:Key="EntryPlaceholderColorDark">#888888</Color>

    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="#3E7BFA" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="16" />
    </Style>

</ResourceDictionary>