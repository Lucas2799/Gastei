<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Cores Primárias -->
    <Color x:Key="PrimaryColor">#512BD4</Color>
    <Color x:Key="PrimaryDarkColor">#3A1FA5</Color>
    <Color x:Key="SecondaryColor">#FF6B35</Color>

    <!-- Cores de Texto -->
    <Color x:Key="TextColor">Black</Color>
    <Color x:Key="TextColorDark">White</Color>

    <Color x:Key="SecondaryTextColor">#666666</Color>
    <Color x:Key="SecondaryTextColorDark">#AAAAAA</Color>

    <!-- Cores de Fundo -->
    <Color x:Key="PageBackgroundColor">White</Color>
    <Color x:Key="PageBackgroundColorDark">#1C1C1E</Color>

    <Color x:Key="CardBackgroundColor">#F8F9FA</Color>
    <Color x:Key="CardBackgroundColorDark">#2C2C2E</Color>

    <Color x:Key="CardBorderColor">#DEE2E6</Color>
    <Color x:Key="CardBorderColorDark">#404040</Color>

    <!-- Cores de Input -->
    <Color x:Key="EntryBackgroundColor">White</Color>
    <Color x:Key="EntryBackgroundColorDark">#2C2C2E</Color>

    <Color x:Key="EntryTextColor">Black</Color>
    <Color x:Key="EntryTextColorDark">White</Color>

    <Color x:Key="EntryPlaceholderColor">#999999</Color>
    <Color x:Key="EntryPlaceholderColorDark">#888888</Color>

    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="#3E7BFA" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="16" />
    </Style>

</ResourceDictionary>