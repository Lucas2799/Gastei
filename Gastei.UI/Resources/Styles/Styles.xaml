<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Style para ContentPage -->
    <Style TargetType="ContentPage" ApplyToDerivedTypes="True">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource PageBackgroundColor}, Dark={StaticResource PageBackgroundColorDark}}" />
    </Style>

    <!-- Style para Label -->
    <Style TargetType="Label" ApplyToDerivedTypes="True">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource TextColor}, Dark={StaticResource TextColorDark}}" />
    </Style>

    <!-- Style para Entry -->
    <Style TargetType="Entry">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource EntryTextColor}, Dark={StaticResource EntryTextColorDark}}" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource EntryBackgroundColor}, Dark={StaticResource EntryBackgroundColorDark}}" />
        <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light={StaticResource EntryPlaceholderColor}, Dark={StaticResource EntryPlaceholderColorDark}}" />
    </Style>

    <!-- Style para Picker -->
    <Style TargetType="Picker">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource EntryTextColor}, Dark={StaticResource EntryTextColorDark}}" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource EntryBackgroundColor}, Dark={StaticResource EntryBackgroundColorDark}}" />
        <Setter Property="TitleColor" Value="{AppThemeBinding Light={StaticResource EntryPlaceholderColor}, Dark={StaticResource EntryPlaceholderColorDark}}" />
    </Style>

    <!-- Style para Frame -->
    <Style TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource CardBackgroundColor}, Dark={StaticResource CardBackgroundColorDark}}" />
        <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource CardBorderColor}, Dark={StaticResource CardBorderColorDark}}" />
    </Style>

    <!-- Style para Button -->
    <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="8" />
    </Style>

</ResourceDictionary>