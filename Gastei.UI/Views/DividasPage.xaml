<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    x:Class="Gastei.UI.Views.DividasPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:Gastei.UI.ViewModels"
    xmlns:entities="clr-namespace:Gastei.Core.Entities;assembly=Gastei.Core"
    Title="Gerenciar DÃ­vidas">

    <ContentPage.Resources>
        <DataTemplate x:Key="DividaTemplate" x:DataType="entities:Divida">
            <Frame Margin="0,5"
                   Padding="12"
                   HasShadow="False"
                   BorderColor="#333"
                   CornerRadius="10"
                   BackgroundColor="#1E1E1E">
                <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto">
                    <HorizontalStackLayout Grid.Row="0" Grid.ColumnSpan="2" Spacing="10" VerticalOptions="Center">
                        <Label Text="{Binding Descricao}"
                               FontAttributes="Bold"
                               FontSize="16"
                               TextColor="White"
                               HorizontalOptions="StartAndExpand" />

                        <Label Text="{Binding Status}"
                               FontSize="13"
                               TextColor="{Binding StatusCor}"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>

                    <VerticalStackLayout Grid.Row="1" Grid.Column="0" Spacing="2" Margin="0,4,0,0">
                        <Label Text="{Binding Valor, StringFormat='R$ {0:F2}'}"
                               FontSize="15"
                               TextColor="#F5F5F5"
                               FontAttributes="Bold" />

                        <Label Text="{Binding DiaVencimento, StringFormat='Vencimento: dia {0}'}"
                               FontSize="12" TextColor="#AAA" />

                        <Label Text="{Binding Tipo, StringFormat='Tipo: {0}'}"
                               FontSize="12" TextColor="#AAA" />

                        <HorizontalStackLayout Spacing="6" Margin="0,3,0,0">
                            <Border StrokeThickness="0"
                                    BackgroundColor="{Binding CategoriaCor}"
                                    StrokeShape="RoundRectangle 8">
                                <Label Text="{Binding Categoria}"
                                       FontSize="12"
                                       TextColor="White"
                                       Padding="8,3"
                                       FontAttributes="Bold" />
                            </Border>

                            <Border StrokeThickness="0"
                                    BackgroundColor="#333"
                                    StrokeShape="RoundRectangle 8">
                                <Label Text="{Binding Subcategoria}"
                                       FontSize="12"
                                       TextColor="#DDD"
                                       Padding="6,3" />
                            </Border>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Row="1" Grid.Column="1" VerticalOptions="Center" Spacing="4">
                        <Button Text="âœï¸"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:DividaViewModel}}, Path=EditarDividaCommand}"
                                CommandParameter="{Binding .}"
                                BackgroundColor="Transparent"
                                FontSize="14"
                                TextColor="#FFCC00"
                                Padding="0" />

                        <Button Text="{Binding Ativa, Converter={StaticResource BooleanToToggleTextConverter}}"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:DividaViewModel}}, Path=AlternarStatusDividaCommand}"
                                CommandParameter="{Binding .}"
                                BackgroundColor="Transparent"
                                FontSize="11"
                                TextColor="Gray"
                                Padding="0" />
                    </VerticalStackLayout>
                </Grid>
            </Frame>
        </DataTemplate>
    </ContentPage.Resources>

    <Grid Padding="20" RowDefinitions="Auto,Auto,*,Auto">

        <!-- ðŸ”¹ Seletor de mÃªs -->
        <HorizontalStackLayout Grid.Row="0" Spacing="10" HorizontalOptions="Center" Margin="0,0,0,10">
            <Button Text="â—€ï¸" Command="{Binding MudarMesAnteriorCommand}" />
            <Label Text="{Binding MesSelecionado, StringFormat='{}{0:D2}/'}"
                   FontSize="18" FontAttributes="Bold" TextColor="White" />
            <Label Text="{Binding AnoSelecionado}" FontSize="18" FontAttributes="Bold" TextColor="White" />
            <Button Text="â–¶ï¸" Command="{Binding MudarProximoMesCommand}" />
        </HorizontalStackLayout>

        <!-- Header -->
        <Frame Grid.Row="1"
               BackgroundColor="{StaticResource PrimaryColor}" 
               CornerRadius="12"
               Margin="0,0,0,10">
            <VerticalStackLayout Spacing="5">
                <Label Text="Total em DÃ­vidas" TextColor="White" FontSize="16" HorizontalOptions="Center" />
                <Label Text="{Binding TotalDividas, StringFormat='R$ {0:F2}'}"
                       TextColor="White" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Frame>

        <!-- Lista -->
        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding Dividas}"
                        ItemTemplate="{StaticResource DividaTemplate}"
                        SelectionMode="None"
                        ItemSizingStrategy="MeasureFirstItem"
                        RemainingItemsThreshold="5"
                        RemainingItemsThresholdReachedCommand="{Binding CarregarMaisCommand}">
            <CollectionView.Footer>
                <StackLayout Padding="10" HorizontalOptions="Center" VerticalOptions="Center">
                    <ActivityIndicator IsRunning="{Binding CarregandoMais}" IsVisible="{Binding CarregandoMais}" />
                    <Label Text="Carregando mais..." 
                           IsVisible="{Binding CarregandoMais}" 
                           FontSize="12" 
                           TextColor="#AAA"
                           HorizontalOptions="Center" />
                </StackLayout>
            </CollectionView.Footer>
        </CollectionView>

        <!-- BotÃ£o Nova DÃ­vida -->
        <Button Text="+ Nova DÃ­vida" 
                Command="{Binding NovaDividaCommand}"
                Grid.Row="3"
                Margin="0,20,0,0"
                HeightRequest="50"/>

        <ActivityIndicator IsVisible="{Binding IsBusy}" 
                           IsRunning="{Binding IsBusy}"
                           VerticalOptions="Center"
                           HorizontalOptions="Center" />
    </Grid>
</ContentPage>
