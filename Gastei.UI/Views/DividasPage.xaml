<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Gastei.UI.Views.DividasPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:Gastei.UI.ViewModels"
    xmlns:entities="clr-namespace:Gastei.Core.Entities;assembly=Gastei.Core"
    BackgroundColor="#121212"
    Title="DÃ­vidas">

    <ContentPage.Resources>

        <!-- TEMPLATE DOS CARDS DE DÃVIDA -->
        <DataTemplate x:Key="DividaTemplate" x:DataType="entities:Divida">
            <Frame CornerRadius="18"
                   Padding="20"
                   Margin="0,10"
                   BackgroundColor="#1E1E1E"
                   HasShadow="True">

                <Frame.GestureRecognizers>
                    <TapGestureRecognizer
                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:DividaViewModel}}, Path=EditarDividaCommand}"
                        CommandParameter="{Binding .}"
                        NumberOfTapsRequired="1"/>
                </Frame.GestureRecognizers>

                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">

                    <!-- DESCRIÃ‡ÃƒO + STATUS -->
                    <HorizontalStackLayout Grid.Row="0" Grid.ColumnSpan="2" Spacing="10">
                        <Label Text="{Binding Descricao}"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="White"/>

                        <Label Text="{Binding Status}"
                               TextColor="{Binding StatusCor}"
                               FontSize="14"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <!-- DETALHES -->
                    <VerticalStackLayout Grid.Row="1" Grid.Column="0" Spacing="4" Margin="0,10,0,0">
                        <Label Text="{Binding Valor, StringFormat='R$ {0:F2}'}"
                               TextColor="#F5F5F5"
                               FontSize="17"
                               FontAttributes="Bold"/>

                        <Label Text="{Binding DiaVencimento, StringFormat='Vencimento: dia {0}'}"
                               TextColor="#AAA"
                               FontSize="12"/>

                        <Label Text="{Binding Tipo, StringFormat='Tipo: {0}'}"
                               TextColor="#AAA"
                               FontSize="12"/>

                        <HorizontalStackLayout Spacing="6" Margin="0,6,0,0">
                            <Border BackgroundColor="{Binding CategoriaCor}" StrokeThickness="0" StrokeShape="RoundRectangle 8">
                                <Label Text="{Binding Categoria}"
                                       TextColor="White"
                                       Padding="8,3"
                                       FontSize="12"
                                       FontAttributes="Bold"/>
                            </Border>

                            <Border BackgroundColor="#333" StrokeThickness="0" StrokeShape="RoundRectangle 8">
                                <Label Text="{Binding Subcategoria}"
                                       TextColor="#DDD"
                                       Padding="6,3"
                                       FontSize="12"/>
                            </Border>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>

                    <!-- AÃ‡Ã•ES -->
                    <VerticalStackLayout Grid.Row="1" Grid.Column="1"
                                         Spacing="10"
                                         HorizontalOptions="End"
                                         VerticalOptions="Center">

                        <Button Text="âœï¸"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:DividaViewModel}}, Path=EditarDividaCommand}"
                                CommandParameter="{Binding .}"
                                BackgroundColor="Transparent"
                                TextColor="#FFCC00"
                                FontSize="16"
                                Padding="0"/>

                        <Button Text="{Binding Ativa, Converter={StaticResource BooleanToToggleTextConverter}}"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:DividaViewModel}}, Path=AlternarStatusDividaCommand}"
                                CommandParameter="{Binding .}"
                                BackgroundColor="Transparent"
                                TextColor="#AAA"
                                FontSize="12"
                                Padding="0"/>

                        <Button Text="ðŸ—‘ï¸"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:DividaViewModel}}, Path=ExcluirDividaCommand}"
                                CommandParameter="{Binding .}"
                                BackgroundColor="Transparent"
                                TextColor="#FF4F4F"
                                FontSize="14"
                                Padding="0"/>
                    </VerticalStackLayout>

                </Grid>
            </Frame>
        </DataTemplate>

    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- HEADER COM GRADIENTE PREMIUM -->
            <Frame Padding="25"
       CornerRadius="20"
       HasShadow="True"
       Margin="20,10"
       HorizontalOptions="Fill"
       VerticalOptions="Start">

                <Frame.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#6a11cb" Offset="0.0" />
                        <GradientStop Color="#2575fc" Offset="1.0" />
                    </LinearGradientBrush>
                </Frame.Background>

                <VerticalStackLayout Spacing="16" HorizontalOptions="Center">

                    <!-- TÃTULO -->
                    <Label Text="DÃ­vidas"
               TextColor="White"
               FontSize="30"
               FontAttributes="Bold"
               HorizontalTextAlignment="Center"/>

                    <!-- SELETOR DE MÃŠS EM "CÃPSULA" -->
                    <Border Background="#fff2cc"
                StrokeThickness="0"
                Padding="12"
                StrokeShape="RoundRectangle 20"
                HorizontalOptions="Center">

                        <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">

                            <!-- MÃŠS ANTERIOR -->
                            <ImageButton Source="chevron_left.png"
                             BackgroundColor="Black"
                             HeightRequest="32"
                             WidthRequest="32"
                             Command="{Binding MudarMesAnteriorCommand}"
                             Scale="0.9"/>

                            <!-- MÃŠS / ANO -->
                            <HorizontalStackLayout Spacing="4" VerticalOptions="Center">
                                <Label Text="{Binding MesSelecionado, StringFormat='{}{0:D2}/'}"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="Black"/>

                                <Label Text="{Binding AnoSelecionado}"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="Black"/>
                            </HorizontalStackLayout>

                            <!-- PRÃ“XIMO MÃŠS -->
                            <ImageButton Source="chevron_right.png"
                             BackgroundColor="Black"
                             HeightRequest="32"
                             WidthRequest="32"
                             Command="{Binding MudarProximoMesCommand}"
                             Scale="0.9"/>
                        </HorizontalStackLayout>

                    </Border>

                </VerticalStackLayout>
            </Frame>


            <!-- TOTAL -->
            <Frame BackgroundColor="#1E1E1E" CornerRadius="18" Padding="20">
                <VerticalStackLayout Spacing="5">
                    <Label Text="Total em DÃ­vidas" TextColor="#BBB" FontSize="14"/>
                    <Label Text="{Binding TotalDividas, StringFormat='R$ {0:F2}'}"
                           TextColor="White"
                           FontSize="30"
                           FontAttributes="Bold"/>
                </VerticalStackLayout>
            </Frame>

            <!-- LISTA -->
            <CollectionView
                ItemsSource="{Binding Dividas}"
                ItemTemplate="{StaticResource DividaTemplate}"
                SelectionMode="None"
                ItemSizingStrategy="MeasureFirstItem"
                RemainingItemsThreshold="5"
                RemainingItemsThresholdReachedCommand="{Binding CarregarMaisCommand}">
            </CollectionView>

            <!-- NOVA DIVIDA -->
            <Frame CornerRadius="20"
                   Padding="15"
                   BackgroundColor="#2575fc"
                   HasShadow="True"
                   Margin="0,10,0,20">

                <Frame.GestureRecognizers>
                    <TapGestureRecognizer 
                        Command="{Binding NovaDividaCommand}" 
                        NumberOfTapsRequired="1"/>
                </Frame.GestureRecognizers>

                <Label Text="+ Nova DÃ­vida"
                       TextColor="White"
                       FontSize="20"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"/>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
