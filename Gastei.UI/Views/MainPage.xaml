<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Gastei.UI.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
   BackgroundColor="{AppThemeBinding Light={StaticResource PageBackgroundLight},
                                      Dark={StaticResource PageBackgroundDark}}"
    Title="Gastei">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="20">

            <!-- HEADER -->
            <Frame Padding="25"
                   CornerRadius="20"
                   HasShadow="True"
                   Margin="0,10,0,20">
                <Frame.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#6a11cb" Offset="0.0" />
                        <GradientStop Color="#2575fc" Offset="1.0" />
                    </LinearGradientBrush>
                </Frame.Background>

                <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                    <Label Text="Gastei"
                           TextColor="White"
                           FontSize="32"
                           FontAttributes="Bold"/>
                    <Label Text="Controle financeiro inteligente"
                           TextColor="#EAEAEA"
                           FontSize="14"/>
                </VerticalStackLayout>
            </Frame>


            <!-- MENU  -->
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" RowSpacing="15" ColumnSpacing="15">

                <!-- 👤 Usuário -->
                <Frame Grid.Row="0" Grid.Column="0"
                       BackgroundColor="#1E1E1E"
                       CornerRadius="18"
                       Padding="20"
                       HasShadow="True">

                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnUsuarioClicked" NumberOfTapsRequired="1"/>
                    </Frame.GestureRecognizers>

                    <VerticalStackLayout Spacing="12" HorizontalOptions="Center">
                        <Label Text="👤" FontSize="40"/>
                        <Label Text="Usuário" FontSize="16" TextColor="White"/>
                    </VerticalStackLayout>
                </Frame>


                <!-- 💳 Dívidas -->
                <Frame Grid.Row="0" Grid.Column="1"
                       BackgroundColor="#1E1E1E"
                       CornerRadius="18"
                       Padding="20"
                       HasShadow="True">

                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnDividasClicked" NumberOfTapsRequired="1"/>
                    </Frame.GestureRecognizers>

                    <VerticalStackLayout Spacing="12" HorizontalOptions="Center">
                        <Label Text="💳" FontSize="40"/>
                        <Label Text="Dívidas" FontSize="16" TextColor="White"/>
                    </VerticalStackLayout>
                </Frame>


                <!-- 📊 Orçamento -->
                <Frame Grid.Row="1" Grid.Column="0"
                       BackgroundColor="#1E1E1E"
                       CornerRadius="18"
                       Padding="20"
                       HasShadow="True">

                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnOrcamentoClicked" NumberOfTapsRequired="1"/>
                    </Frame.GestureRecognizers>

                    <VerticalStackLayout Spacing="12" HorizontalOptions="Center">
                        <Label Text="📊" FontSize="40"/>
                        <Label Text="Orçamento" FontSize="16" TextColor="White"/>
                    </VerticalStackLayout>
                </Frame>


                <!-- 📈 Relatórios -->
                <Frame Grid.Row="1" Grid.Column="1"
                       BackgroundColor="#1E1E1E"
                       CornerRadius="18"
                       Padding="20"
                       HasShadow="True">

                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnRelatorioClicked" NumberOfTapsRequired="1"/>
                    </Frame.GestureRecognizers>

                    <VerticalStackLayout Spacing="12" HorizontalOptions="Center">
                        <Label Text="📈" FontSize="40"/>
                        <Label Text="Relatórios" FontSize="16" TextColor="White"/>
                    </VerticalStackLayout>
                </Frame>

            </Grid>

            <Label Text="Versão 1.0.0"
                   TextColor="#555"
                   FontSize="12"
                   HorizontalOptions="Center"
                   Margin="0,20,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
